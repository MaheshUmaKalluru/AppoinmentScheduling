
@model AppoinmentScheduling.Models.ViewModels.LoginViewModel


<h2> Sign In</h2>


<div class="row">
    <div class="col-md-8">

        <section id="loginform">

            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4> User your Email and password to login</h4>

                <hr />
                <div asp-validation-summary="All" class="text-danger"> </div>


                <div class="form-group row">

                    <label class="col-md-2" asp-for="Email"></label>

                    <div class="col-md-10">
                        <input asp-for="Email" class="from-control" />
                        <span asp-validation-for="Email" class="text-danger">
                        </span>
                    </div>
                </div>
                <br />

                <div class="form-group row">

                    <label class="col-md-2" asp-for="password"></label>

                    <div class="col-md-10">
                        <input asp-for="password" class="from-control" />
                        <span asp-validation-for="password" class="text-danger">
                        </span>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10 offset-md-2 checkbox">


                        <label asp-for="RememberMe" class="mr-4 pl-0">
                            <input asp-for="RememberMe" />
                        </label>
                        Remeber me?
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10 offset-md-2 checkbox">



                        <input type="submit" value="Log in" class="btn btn-success" />

                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Sign Up</a>
                </p>


            </form>

        </section>

    </div>
</div>




@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}