
@model AppoinmentScheduling.Models.ViewModels.RegisterViewModel


<h2> Sign up</h2>

<form method="post" asp-action="Register" asp-controller="Account">
    <h4>Createa a new account</h4>
    <hr />

    <div asp-validation-summary="All" class="text-danger"> </div>

    <div class="form-group row">

        <label class="col-md-2" asp-for="Name"></label>

        <div class="col-md-10">
            <input asp-for="Name" class="from-control" />
            <span asp-validation-for="Name " class="text-danger">
            </span>
        </div>
    </div>
    <br />

    <div class="form-group row">

        <label class="col-md-2" asp-for="Email"></label>

        <div class="col-md-10">
            <input asp-for="Email" class="from-control" />
            <span asp-validation-for="Email" class="text-danger">
            </span>
        </div>
    </div>
    <br />

    <div class="form-group row">

        <label class="col-md-2" asp-for="Password"></label>

        <div class="col-md-10">
            <input asp-for="Password" class="from-control" />
            <span asp-validation-for="Password" class="text-danger">
            </span>
        </div>
    </div>
    <br />

    <div class="form-group row">

        <label class="col-md-2" asp-for="ConfirmPassowrd"></label>

        <div class="col-md-10">
            <input asp-for="ConfirmPassowrd" class="from-control" />
            <span asp-validation-for="ConfirmPassowrd" class="text-danger">
            </span>
        </div>
    </div>
    <br />

    <div class="form-group row">

        <label class="col-md-2" asp-for="RoleName"></label>

        <div class="col-md-10">
            <select asp-for="RoleName" asp-items="@AppoinmentScheduling.Utility.Helper.GetRolesForDropDown()" class="from-control" > </select>
            
            <span asp-validation-for="RoleName" class="text-danger">
            </span>
        </div>
    </div>
    <br />
    
    <div class="form-group">

        <div class="col-md-10 offset-md-2 checkbox">



            <input type="submit" value="Register" class="btn btn-success" />

        </div>

    </div>
    <p class="col-md-10 offset-md-2">
        <a asp-action="Login">Sign In</a>
    </p>


</form>


@section Scripts {

<partial name="_ValidationScriptsPartial" />
}